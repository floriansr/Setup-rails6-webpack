<!DOCTYPE html>
<html>
  <head>
    <title>SetupRails6</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all' %>
    <%= javascript_pack_tag 'application' %>
  </head>

  <body>
    <nav class="navbar navbar-expand-lg navbar-light bg-light">
      <a class="navbar-brand" href="#">Navbar</a>
      <div class="collapse navbar-collapse" id="navbarNavAltMarkup">
        <div class="navbar-nav">
          <% link_to "Home", root_path, class: "nav-item nav-link"%>

          <% if current_user %>
            <p>ONLINE</p>
            <p>username : <%= current_user.username%></p>
            <%= link_to "Profile", profile_path, class: "nav-item nav-link"%>
            <%= link_to "Sign Out", destroy_user_session_path(current_user), method: "delete", class: "nav-item nav-link"%>
          <% else %>
            <p>OFFLINE</p>
            <%= link_to "Sign In", new_user_session_path, class: "nav-item nav-link"%>
            <%= link_to "Sign Up", new_user_registration_path, class: "nav-item nav-link"%>
          <% end %>
        </div>
      </div>
    </nav>
      <p class="notice"><%= notice %></p>
      <p class="alert"><%= alert %></p>

    <%= yield %>
  </body>
</html>
